{
	"app-id": "com.adilhanney.ricochlime",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "22.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "ricochlime",
	"separate-locales": false,
	"finish-args": [
		"--share=network",
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--device=dri",
		"--socket=pulseaudio"
	],
	"modules": [
		{
			"name": "ricochlime",
			"buildsystem": "simple",
			"only-arches": ["x86_64"],
			"build-commands": [
				"mkdir -p Ricochlime",
				"tar -xf Ricochlime-Linux-Portable.tar.gz -C Ricochlime",

				"cp -r Ricochlime /app/",
				"chmod +x /app/Ricochlime/ricochlime",
				"mkdir -p /app/bin",
				"mkdir -p /app/lib",
				"ln -s /app/Ricochlime/ricochlime /app/bin/ricochlime",
				"ln -s /app/Ricochlime/lib/* /app/lib/",

				"install -Dm644 com.adilhanney.ricochlime.metainfo.xml -t /app/share/metainfo/",

				"install -Dm644 icon-16x16.png /app/share/icons/hicolor/16x16/apps/com.adilhanney.ricochlime.png",
				"install -Dm644 icon-24x24.png /app/share/icons/hicolor/24x24/apps/com.adilhanney.ricochlime.png",
				"install -Dm644 icon-32x32.png /app/share/icons/hicolor/32x32/apps/com.adilhanney.ricochlime.png",
				"install -Dm644 icon-48x48.png /app/share/icons/hicolor/48x48/apps/com.adilhanney.ricochlime.png",
				"install -Dm644 icon-64x64.png /app/share/icons/hicolor/64x64/apps/com.adilhanney.ricochlime.png",
				"install -Dm644 icon-128x128.png /app/share/icons/hicolor/128x128/apps/com.adilhanney.ricochlime.png",
				"install -Dm644 icon-256x256.png /app/share/icons/hicolor/256x256/apps/com.adilhanney.ricochlime.png",
				"install -Dm644 icon-512x512.png /app/share/icons/hicolor/512x512/apps/com.adilhanney.ricochlime.png",

				"install -Dm644 com.adilhanney.ricochlime.desktop -t /app/share/applications/"
			],
			"sources": [
				{
					"type": "file",
					"path": "com.adilhanney.ricochlime.metainfo.xml"
				},
				{
					"type": "file",
					"path": "com.adilhanney.ricochlime.desktop"
				},
				{
					"type": "file",
					"path": "../Ricochlime-Linux-Portable.tar.gz"
				},
				{
					"type": "file",
					"path": "../assets/icon/resized/icon-16x16.png"
				},
				{
					"type": "file",
					"path": "../assets/icon/resized/icon-24x24.png"
				},
				{
					"type": "file",
					"path": "../assets/icon/resized/icon-32x32.png"
				},
				{
					"type": "file",
					"path": "../assets/icon/resized/icon-48x48.png"
				},
				{
					"type": "file",
					"path": "../assets/icon/resized/icon-64x64.png"
				},
				{
					"type": "file",
					"path": "../assets/icon/resized/icon-128x128.png"
				},
				{
					"type": "file",
					"path": "../assets/icon/resized/icon-256x256.png"
				},
				{
					"type": "file",
					"path": "../assets/icon/resized/icon-512x512.png"
				}
			]
		}
	]
}
